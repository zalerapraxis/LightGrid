<Window x:Class="LightGrid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightGrid"
        mc:Ignorable="d"
        Title="LightGrid" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <UniformGrid Name="uniformGridOfColors" Grid.Row="0" Rows="5" Columns="5" />

        <UniformGrid Name="uniformGridOfOptions" Grid.Row="1" Columns="4">
            <Button Name="btnRefreshColors" Content="Refresh" Click="BtnRefreshColors_OnClick"></Button>
            <Button Name="btnToggleOnOff" Content="Toggle" Click="BtnToggleOnOff_OnClick"></Button>
            <Button Name="btnSet2700k" Content="2700K" Click="BtnSet2700k_OnClick"></Button>
            <Button Name="btnMusicMode" Content="Music mode" Click="BtnMusicMode_OnClick"></Button>
        </UniformGrid>
    </Grid>
</Window>
